  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  isArchived Boolean   @default(false)
  archivedAt DateTime?
  archivedBy String?

  @@index([assigneeId])
  @@index([organisationId])
  @@index([createdById])
  @@index([status])
  @@index([priority])
}

